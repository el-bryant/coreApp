<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity"
    android:background="@drawable/fondo"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mi perfil"
            android:textSize="25sp"
            android:fontFamily="@font/montserrat_bold"
            android:textAlignment="center"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/amarillo" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center" >

                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp" >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/redondo_amarillo" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_camera"
                        android:tint="@color/negro"
                        android:padding="30dp" />

                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/blanco"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="15dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="12"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Nombres:"
                                android:layout_weight="4"
                                android:fontFamily="@font/montserrat"
                                android:textStyle="bold"
                                android:textColor="@color/negro"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvNombres"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:text="Bryant Alejandro"
                                android:textSize="15sp"
                                android:fontFamily="@font/catamaran_extralight"
                                android:visibility="visible"
                                android:textColor="@color/negro" />

                            <EditText
                                android:id="@+id/etNombres"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:background="@null"
                                android:textSize="15sp"
                                android:fontFamily="@font/catamaran_extralight"
                                android:visibility="gone"
                                android:textColor="@color/negro" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="12"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Apellidos:"
                                android:layout_weight="4"
                                android:fontFamily="@font/montserrat"
                                android:textStyle="bold"
                                android:textColor="@color/negro"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvApellidoPaterno"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/catamaran_extralight"
                                android:textSize="15sp"
                                android:text="Yacila" />

                            <EditText
                                android:id="@+id/etApellidoPaterno"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:background="@null"
                                android:textSize="15sp"
                                android:fontFamily="@font/catamaran_extralight"
                                android:textColor="@color/negro"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tvApellidoMaterno"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/catamaran_extralight"
                                android:textSize="15sp"
                                android:text="Valenzuela" />

                            <EditText
                                android:id="@+id/etApellidoMaterno"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:background="@null"
                                android:text="Valenzuela"
                                android:textSize="15sp"
                                android:fontFamily="@font/catamaran_extralight"
                                android:textColor="@color/negro"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="12"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Celular:"
                                android:layout_weight="4"
                                android:fontFamily="@font/montserrat"
                                android:textStyle="bold"
                                android:textColor="@color/negro"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvCelular"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:textSize="15sp"
                                android:fontFamily="@font/catamaran_extralight"
                                android:textColor="@color/negro"
                                android:text="936 794 594" />

                            <EditText
                                android:id="@+id/etCelular"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:background="@null"
                                android:textSize="15sp"
                                android:fontFamily="@font/catamaran_extralight"
                                android:textColor="@color/negro"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="12"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Correo:"
                                android:layout_weight="4"
                                android:fontFamily="@font/montserrat"
                                android:textStyle="bold"
                                android:textColor="@color/negro"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvCorreo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="bry.y.valen@gmail.com"
                                android:layout_weight="8"
                                android:fontFamily="@font/catamaran_extralight"
                                android:textColor="@color/negro"
                                android:textSize="15sp" />


                            <EditText
                                android:id="@+id/etCorreo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:background="@null"
                                android:textSize="15sp"
                                android:fontFamily="@font/catamaran_extralight"
                                android:textColor="@color/negro"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="12"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Dirección:"
                                android:layout_weight="4"
                                android:fontFamily="@font/montserrat"
                                android:textStyle="bold"
                                android:textColor="@color/negro"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvDireccion"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Fundo San Andrés S/N - Pimentel"
                                android:layout_weight="8"
                                android:textColor="@color/negro"
                                android:textSize="15sp"
                                android:fontFamily="@font/catamaran_extralight" />


                            <EditText
                                android:id="@+id/etDireccion"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:background="@null"
                                android:textSize="15sp"
                                android:fontFamily="@font/catamaran_extralight"
                                android:textColor="@color/negro"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivEditar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_edit"
        android:background="@drawable/redondo_amarillo"
        android:tint="@color/negro"
        android:padding="10dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivGuardar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_done"
        android:background="@drawable/redondo_amarillo"
        android:tint="@color/negro"
        android:padding="10dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="60dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_menu"
        android:tint="@color/blanco"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp" />

    <FrameLayout
        android:id="@+id/flayCargando"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9010131a"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/amarillo" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>